<div class="container">

  <% if(sessionFlash){ %>
    <div class="<%= sessionFlash.type %>">
        <%= sessionFlash.message %>
    </div>
  <% } %>

  <h2>Add Address</h2>
  <hr><br>

  <form action="/add_address" method="POST">
    <div class="form-group">
        <label for="inputAddress">Phone Number</label>
        <input type="text" class="form-control" id="inputNumber" name="PhoneNumber" placeholder="+90 500 000 00 00">
        <small id="emailHelp" class="form-text text-muted">We'll never share phone numbers with anyone else.</small>
    </div>

    <div class="form-group">
        <label for="inputPassword4">Name & Surname</label>
        <input type="namesurname" class="form-control" id="inputNameSurname" name="NameSurname" placeholder="Name and Surname">
    </div>

    <div class="form-group">
        <label for="inputEmail">E-mail</label>
        <input type="email" class="form-control" id="inputEmail" name="Email" placeholder="Email">
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
          <label for="inputAddress">Address</label>
          <input type="text" class="form-control" id="inputAddress" name="Address" placeholder="Address">
        </div>
        <div class="form-group col-md-6">
          <label for="inputCity">City</label>
          <input type="text" class="form-control" id="inputCity" name="City" placeholder="City">
        </div>
    </div>

    <br>
    <input type="submit" class="btn btn-primary" value="Add"> 
    <a type="button" class="btn btn-secondary" href="/">Back</a>
  </form>
</div>
